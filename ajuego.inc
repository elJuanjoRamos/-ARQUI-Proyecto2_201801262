
ENTER_VIDEOMODE MACRO 
	PUSH_VARS  
    MOV AH, 00h ; video mode
    MOV AL, 13h
    int 10H
	MOV ax,0A000h
	MOV ds ,ax
    POP_VARS
    MOV AH, 0Bh ; set configuracion
    MOV BH, 00h ; background color
    MOV BL, 00h ; color para el background
    INT 10H     ; ejecutar configuracion

ENDM 


DRAW_BLOCK macro 
	local BUCLE,REPETIR, fin
	
		MOV BX, 0 
		MOV DI, 6736 ;pixel de inicio = esquina superior izquierda
		MOV SI, 0
		MOV DX, 3 ; color 
		MOV CX, 3FC0h;1388h;bx ;
	
		BUCLE:
			MOV [DI],dx 
			INC DI 
			INC SI 
			cmp SI,34;50;ax; 
			JNE REPETIR
			ADD DI,2
			MOV SI,0
			INC BL 
			cmp BL,8
			JNE REPETIR
			ADD DI,32
			xor BL,BL 
			INC bh 
			cmp bh,10
			JNE REPETIR  
			ADD DI,640
			xor bh,bh 
		
		REPETIR:
		loop BUCLE
	endm


